<%- include('partials/head') %>
<%- include('partials/header') %>

<main>
    <div class="title">
        <h1><%= title %></h1>
    </div>
    <div class="progress-bar-wrapper">
        <div id="progress-bar">
            <div id="bar"></div>
        </div>
        <p id="progress"></p>
    </div>
    <form action="/thanks" class="form form-questions">
        <input type="text" name="firstname" placeholder="John" value="<%= queries.firstname %>" hidden>
        <input type="text" name="lastname" placeholder="Doe" value="<%= queries.lastname %>" hidden>
        <div class="questions">
        <%data.map(item => { %>
            <div class="question">
                <p class="text-progress"><%= item.id%> van 10</p>
                <fieldset>
                    <legend><%= item.question %></legend>
                    <%for(let value in item.options){ %>
                    <label class="radio">
                        <input type="radio" name="q<%= item.id %>" value="<%= value %>"
                            <% if ( item.name == "q1" && queries.q1 == value ) { %>
                               checked
                            <% } else if (item.name == "q2" && queries.q2 == value) { %>
                               checked
                            <% } else if (item.name == "q3" && queries.q3 == value) { %>
                               checked
                            <% } else if (item.name == "q4" && queries.q4 == value) { %>
                               checked
                            <% } else if (item.name == "q5" && queries.q5 == value) { %>
                               checked
                            <% } else if (item.name == "q6" && queries.q6 == value) { %>
                               checked
                            <% } else if (item.name == "q7" && queries.q7 == value) { %>
                               checked
                            <% } else if (item.name == "q8" && queries.q8 == value) { %>
                               checked
                            <% } else if (item.name == "q9" && queries.q9 == value) { %>
                               checked
                            <% } else if (item.name == "q10" && queries.q10 == value) { %>
                               checked
                            <% }%>
                         >
                        <span><%= item.options[value] %></span>
                    </label>
                    <br>
                <% } %>
            </fieldset>
            </div>
        <% });%>
        </div>
        <div class="links flex-links pagination">
            <button id="back" type="submit" formaction="/" class="button-3">Terug</button>
            <button type="submit" formaction="/save" class="button-3">Opslaan</button>
            <button id="submit" type="submit" class="button-3">Verstuur</button>
        </div>
    </form>
</main>

<%- include('partials/footer') %>